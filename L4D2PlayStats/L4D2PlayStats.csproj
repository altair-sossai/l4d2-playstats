<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        <PackageId>L4D2PlayStats</PackageId>
        <Version>1.0.0.36</Version>
        <AssemblyTitle>Left 4 dead 2 statistics parser</AssemblyTitle>
        <Description>Allows extracting existing data from statistics files generated by the l4d2_playstats.smx plugin. See more details at: https://github.com/SirPlease/L4D2-Competitive-Rework.</Description>
        <Authors>altairsossai@gmail.com</Authors>
        <RepositoryUrl>https://github.com/altair-sossai/l4d2-playstats</RepositoryUrl>
        <PackageProjectUrl>https://github.com/altair-sossai/l4d2-playstats</PackageProjectUrl>
        <Title>Left 4 dead 2 statistics parser</Title>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\assets\icon.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>